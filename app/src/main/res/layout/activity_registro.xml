<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_fondo_registro"
    android:padding="20dp"
    tools:context=".Registro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/im_logo"
            app:srcCompat="@drawable/ic_logo_parchat" />

        <TextView
            android:id="@+id/Registro"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="34sp"
            tools:text="@string/tv_registro" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Usuario"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_redondeo_edittext"
                app:boxStrokeColor="#ABFFFFFF"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Nombres y apellidos" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:startIconDrawable="@android:drawable/ic_dialog_email"
            app:startIconTint="#A19D9D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_redondeo_edittext"
                app:boxStrokeColor="#ABFFFFFF"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Correo Electrónico" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:endIconMode="password_toggle"
            app:endIconTint="#FFFFFF"
            app:hintTextColor="#B0000000"
            app:startIconDrawable="@android:drawable/ic_lock_lock"
            app:startIconTint="#A19D9D">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contrasena"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_redondeo_edittext"
                app:boxStrokeColor="#ABFFFFFF"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Contraseña" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/bRegis"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/bt_regis"
            android:textStyle="bold"
            app:backgroundTint="#FF5328" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pregunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="-18dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/tv_pregunta"
                android:textColor="#ABFFFFFF" />

            <TextView
                android:id="@+id/sesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="180dp"
                android:layout_marginLeft="150dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/tv_sesion"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/posible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="@string/tv_regisOp"
                android:textColor="#ABFFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-36dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/ib_face"
                android:src="@drawable/ic_logo_facebook" />

            <ImageButton
                android:id="@+id/google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170dp"
                android:layout_marginLeft="170dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/ib_google"
                android:src="@drawable/ic_logo_google" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>